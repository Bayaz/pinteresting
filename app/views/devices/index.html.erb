<h1>Listing devices</h1>

<table>
  <thead>
    <tr>
      <th>Ciid</th>
      <th>Nomenclature</th>
      <th>Description</th>
      <th>Medical</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.ciid %></td>
        <td><%= device.nomenclature %></td>
        <td><%= device.description %></td>
        <td><%= device.medical %></td>
        <td><%= link_to 'Show', device %></td>
        <td><%= link_to 'Edit', edit_device_path(device) %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

